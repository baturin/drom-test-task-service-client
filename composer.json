{
    "name": "abaturin/example-com-client",
    "version": "1.0.0",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0",
        "guzzlehttp/psr7": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "ExampleComApi\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "test-coverage-html": "XDEBUG_MODE=coverage phpunit --coverage-html htmlcov --coverage-filter src tests"
    }
}
